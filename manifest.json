{
  "manifest_version": 3,
  "name": "英語学習単語帳",
  "version": "1.0",
  "description": "ウェブページで選択した単語と文章を保存して単語帳を作成",
  
  "permissions": [
    "storage",
    "activeTab"
  ],
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "単語帳を開く"
  },
  
  "background": {
    "service_worker": "background.js"
  },
  
  "icons": {
    "16": "icons/icon16.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  },

  "options_page": "options.html"
}